{
  "manifest_version": 3,
  "name": "Clean Web",
  "version": "1.0.0",
  "description": "Block problematic images from rendering in HTML pages",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Clean Web Settings"
  }
}