{
  "manifest_version": 3,
  "name": "Clean Web",
  "version": "1.0.0",
  "description": "Block problematic images from rendering in HTML pages",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/imageFilter.js", "src/contentScript.js"],
      "run_at": "document_start"
    }
  ],
  
  "background": {
    "service_worker": "src/background.js"
  },
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Clean Web Settings"
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}